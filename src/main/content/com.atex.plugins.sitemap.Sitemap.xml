<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <input-template name="com.atex.plugins.sitemap.Sitemap" label="com.atex.plugins.sitemap.Sitemap">

    <param name="ViewState_insert">false</param>
    <param name="ViewState_refresh">true</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">true</param>
    <param name="EditNewState_saveAndFastInsert">false</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="ViewState_copy">false</param>

    <param name="renderTemplateIconInSelect">false</param>
    <param name="defaultContentDataType">com.atex.plugins.sitemap.SitemapContentDataBean</param>
    <type>Article</type>

    <field name="associatedUsers" input-template="p.AssociatedUsers" />

    <policy>com.atex.plugins.sitemap.SitemapPolicy</policy>

    <viewer>com.atex.plugins.orchid.onecms.OOneCMSTemplateTopPolicyWidget</viewer>
    <editor>com.atex.plugins.orchid.onecms.OOneCMSTemplateTopPolicyWidget</editor>

    <param name="oneCMSEditTemplateId">com.atex.plugins.sitemap.Sitemap.edit</param>
    <param name="oneCMSViewTemplateId">com.atex.plugins.sitemap.Sitemap.view</param>

    <field name="contentVersionLimiter" input-template="p.ContentVersionLimiter">
      <param name="maxVersions">1</param>
    </field>

  </input-template>
</template-definition>